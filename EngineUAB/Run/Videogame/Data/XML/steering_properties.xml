<steering_properties xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!--longitud de colision de diferentes comportamientos-->
	<ObstacleWallDetectionFeelerLength>3.0</ObstacleWallDetectionFeelerLength>	
	<ObstacleWallDetectionFeelerAngle>60</ObstacleWallDetectionFeelerAngle>	
	<DetectionFeelerAngleIncrement>2.0</DetectionFeelerAngleIncrement>	
	<CollisionDetectionFeelerLength>4.0</CollisionDetectionFeelerLength>
	<CollisionDetectionFeelerAngle>60</CollisionDetectionFeelerAngle>
	<SeparationDetectionFeelerLength>3.4</SeparationDetectionFeelerLength>	<!-- Longitud de los rayos en separación. Ajo -->

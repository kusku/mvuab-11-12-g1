	<flockingNeightbourRadius>3.5</flockingNeightbourRadius>				<!-- Radio de búsqueda de vecinos para Separación, Alineación i Cohesión -->
	<ArriveDecelerationDistance>2.7</ArriveDecelerationDistance>
	<DecelerationTweaker>40.3</DecelerationTweaker>							<!-- Permite suavizar la desaceleración -->
	<ArriveDeceleration>fast</ArriveDeceleration>
	<WanderRefreshRate>1.5</WanderRefreshRate>
	<WanderRadius>1.6</WanderRadius>
	<WanderDistance>5.0</WanderDistance>
	<WanderMinimumDistance>2.0</WanderMinimumDistance>
	
	
	<!--usa estos valores para ajustar la cantidad de cada fuerza de comportamiento direccional del total de la fuerza steering -->
	<SeparationWeight>4.0</SeparationWeight> 
	<AlignmentWeight>2.0</AlignmentWeight> 
	<CohesionWeight>3.0</CohesionWeight> 
	<CollisionAvoidanceWeight>10.0</CollisionAvoidanceWeight> 
	<ObstacleWallAvoidanceWeight>2.0</ObstacleWallAvoidanceWeight> 
	<WanderWeight>1</WanderWeight> 
	<SeekWeight>3.0</SeekWeight> 
	<FleeWeight>1.0</FleeWeight> 
	<ArriveWeight>1.0</ArriveWeight> 
	<OffsetPursuitWeight>1.0</OffsetPursuitWeight> 
	<InterposeWeight>1.0</InterposeWeight> 
	<HideWeight>1.0</HideWeight> 
	<EvadeWeight>0.01</EvadeWeight> 
	<FollowPathWeight>0.05</FollowPathWeight> 


            <MaxStartSize value="10" />
			
            <MinEndSize value="10" />
            <MaxEndSize value="40" />
			
			<BlendState value="Additive" />
	</settings>
	
	<settings name="explosion">
	        <TextureName value="./Data/General/Textures/explosion.png" />
            <MaxParticles value="100" />

            <Duration value="2" />
			<DurationRandomness value="1" />

